cabal-version:       3.0
name:                cardano-ledger-test
version:             0.1.0.0
synopsis:
  Testing harness and tests for Shelley style cardano ledgers
-- description:
-- bug-reports:
license:             Apache-2.0
license-file:        LICENSE
author:              IOHK Formal Methods Team
maintainer:          nicholas.clarke@iohk.io
copyright:           2020 Input Output (Hong Kong) Ltd.
-- category:
build-type:          Simple
extra-source-files:  CHANGELOG.md

library
  -- We make use of features requiring ghc >= 8.10. In order to allow CI to
  -- still build the 'all' component, simply make this non-buildable.
  if impl(ghc < 8.10)
    buildable: False
  hs-source-dirs:      src
  exposed-modules:
    Test.Cardano.Ledger.TestableEra
  ghc-options:
    -Wall
    -Wcompat
    -Wincomplete-record-updates
    -Wincomplete-uni-patterns
    -Wredundant-constraints
    -Wpartial-fields
  build-depends:
    base >=4.14 && <4.15,
    shelley-spec-ledger,
    cardano-ledger-shelley-ma,
    cardano-ledger-alonzo
  default-language:    Haskell2010
